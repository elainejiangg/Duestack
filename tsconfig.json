{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["*.ts"],
  "files": [
    "gemini-llm.ts",
    "parsed-deadline-suggestions.ts",
    "parsed-deadline-suggestions-tests.ts",
    "parsed-deadline-validators.ts",
    "parsed-deadline-prompts.ts",
    "parsed-deadline-editing.ts",
    "parsed-deadline-state.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
